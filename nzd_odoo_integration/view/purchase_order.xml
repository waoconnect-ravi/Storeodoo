<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_purchase_order_form_for_nzd" model="ir.ui.view">
        <field name="name">View Order Form For nzd</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header/button[last()]" position="after">
                <button name="export_purchase_order_file_in_nzd" string="Export Order To NZD" type="object" attrs="{'invisible':[('state','!=','purchase')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
