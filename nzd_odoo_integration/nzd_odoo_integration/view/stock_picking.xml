<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="nzd_view_picking_form_inherit" model="ir.ui.view">
        <field name="name">nzd.view.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="nzd_3pl" readonly="0" invisible="1"/>
                <field name="name_3pl" readonly="1" attrs="{'invisible': [('nzd_3pl', '!=', True)]}"/>
                <field name="date_of_shipped" readonly="1" attrs="{'invisible': [('nzd_3pl', '!=', True)]}"/>
                <field name="tracking_url_nzd_3pl" readonly="1" widget="url"
                       attrs="{'invisible': [('nzd_3pl', '!=', True)]}"/>
            </xpath>
            <xpath expr="//form//header" position="inside">
                <button name="export_sale_order_file_in_nzd" type="object" class="oe_stat_button" string="Send Order To NZD" attrs="{'invisible': ['|',('backorder_id','=',False),('state', '=', 'done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
