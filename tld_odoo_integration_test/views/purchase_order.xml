<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_purchase_order_form_for_tld" model="ir.ui.view">
        <field name="name">Export Order In TLD</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header/button[last()]" position="after">
                <button name="export_purchase_order_file_in_tld" string="Export Order In TLD" attrs="{'invisible':[('state','!=','purchase')]}" type="object"/>
            </xpath>
        </field>
    </record>
</odoo>
