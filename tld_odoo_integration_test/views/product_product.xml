<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="product_product_tld_form" model="ir.ui.view">
        <field name="name">Export Product To TLD</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position='inside'>
                <page string="TLD Product Info">
                    <sheet>
                        <group>
                            <group>
                                <field name="tld_product_length"/>
                                <field name="tld_product_height"/>
                                <field name="tld_product_width"/>
                            </group>
                        </group>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
