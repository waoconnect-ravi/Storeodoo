<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tld_sftp_syncing_form_inherit" model="ir.ui.view">
        <field name="name">tld.sftp.syncing.form.inherit</field>
        <field name="model">sftp.syncing</field>
        <field name="inherit_id" ref="sftp_server_connector.sftp_syncing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='warehouse_id']" position="after">
                <field name="tld_export_product_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>
                <field name="tld_export_sale_order_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>
                <field name="tld_export_purchase_order_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>

                <field name="tld_import_despatch_details_of_order_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>
                <field name="tld_import_product_inventory_adjustment_report_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>
                <field name="tld_import_purchase_order_despatch_report_path"
                       attrs="{'invisible': [('store', '!=', 'tld')],'required': [('store','=','tld')]}"/>
            </xpath>
            <xpath expr="//field[@name='store']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
